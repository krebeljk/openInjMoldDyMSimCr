#!/bin/sh


cat `ls -tr postProcessing/probes/*/p` > postProcessing/probes/p

gnuplot << EOF
set terminal pngcairo size 800, 800 enhanced dashed font 'Verdana,10' #persist
set output "plot.png"

set style line 1 lc rgb '#0060ad' lt 1 lw 2 pt 7 ps 0 # --- blue
set style line 2 lc rgb '#9fac43' lt 1 lw 2 pt 7 ps 0 # --- blue 
set style line 3 lc rgb '#dd181f' lt 1 lw 2 pt 7 ps 0 # --- blue
set style line 4 lc rgb '#000000' lt 2 lw 1 pt 7 ps 0 # --- blue

set multiplot layout 2, 1 title "Cavity pressures P1, P2 and P3"

set title "Filling"
set ylabel 'p [Pa]'
set xlabel 't [s]'

set xrange [0:0.3]

plot "postProcessing/probes/p" using 1:2 title 'P1 enforced' with lines ls 1,\
"postProcessing/probes/p" using 1:3 title 'P2' with lines ls 2,\
"postProcessing/probes/p" using 1:4 title 'P3' with lines ls 3,\
"fim_01_01_G_00_04_00_08.dat" using 1:2 title 'P1 exp' with lines ls 4,\
"fim_01_01_G_00_04_00_08.dat" using 1:3 title 'P2 exp' with lines ls 4 ,\
"fim_01_01_G_00_04_00_08.dat" using 1:4 title 'P3 exp' with lines ls 4


set title "Filling and packing"
set ylabel 'p [Pa]'
set xlabel 't [s]'

set xrange [0:6]

plot "postProcessing/probes/p" using 1:2 title 'P1 enforced' with lines ls 1,\
"postProcessing/probes/p" using 1:3 title 'P2' with lines ls 2,\
"postProcessing/probes/p" using 1:4 title 'P3' with lines ls 3,\
"fim_01_01_G_00_04_00_08.dat" using 1:2 title 'P1 exp' with lines ls 4,\
"fim_01_01_G_00_04_00_08.dat" using 1:3 title 'P2 exp' with lines ls 4 ,\
"fim_01_01_G_00_04_00_08.dat" using 1:4 title 'P3 exp' with lines ls 4

unset multiplot; set output
EOF
